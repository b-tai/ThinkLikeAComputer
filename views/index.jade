html
	head
		title!= title
		link(rel='stylesheet', href='/styles.css')
		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Arvo')
	body
		h1!= title
		p This is a two player game.  Try to guess as many of the tags the computer generates for the image as possible!  Points are based on the higher probabilities for the tags. Have fun!

	br
	img(src!=imageUrl)
	h2#wrong 
	br

	table.center
		tr.p1
			td Player 1
			td.p1pts 0
			td
				input(type=text, name=p1input) 
			td
				button#p1Button(type=button) Submit
		tr.p2
			td Player 2
			td.p2pts 0
			td
				input(type=text, name=p2input) 
			td
				button#p2Button(type=button) Submit

	ol#words
		li.hidden#word1!= word1
		li.hidden#word2!= word2
		li.hidden#word3!= word3
		li.hidden#word4!= word4
		li.hidden#word5!= word5

	<script type="text/javascript" src="/scripts.js"></script>